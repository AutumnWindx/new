<Window x:Class="WpfApp1.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Registration" Height="350" Width="350">
    <Grid>
        <StackPanel Margin="50,50,50,26">
            <TextBlock Text="Имя"/>
            <TextBox Name="FirstTBox"/>
            <TextBlock Text="Фамилия"/>
            <TextBox Name="SecondTBox"/>
            <TextBlock Text="Отчество"/>
            <TextBox Name="LastTBox"/>
            <TextBlock Text="Телефон"/>
            <TextBox Name="PhoneTBox"/>
            <TextBlock Text="Логин"/>
            <TextBox Name="LoginTBox"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox Name="PasswordPBox"/>

            <Button Margin="10"
                Content="Регистрация"
                Name="RegBtn"
                Click="RegBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
